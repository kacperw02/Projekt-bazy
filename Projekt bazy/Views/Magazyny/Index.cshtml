@model IEnumerable<Projekt_bazy.Models.Magazyn>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funkcjonalnosc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lokalizacja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Funkcjonalnosc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokalizacja)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMagazynu">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMagazynu">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMagazynu">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
